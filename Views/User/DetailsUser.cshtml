@model GestionBoutiqueC.Entities.User

<h2 class="text-3xl font-bold text-white text-center bg-burgundy p-4 rounded-t-lg">Détails du User</h2>

<div class="container mx-auto p-6 bg-white rounded-lg shadow-md">
    <div class="space-y-4 mb-4">

    <div class="mb-4">
        <p class="font-medium text-gray-700"><strong>Id :</strong> @Model.Id</p>
    </div>
    <div class="mb-4">
        <p class="font-medium text-gray-700"><strong>Email :</strong> @Model.Email</p>
    </div>
    <div class="mb-4">
        <p class="font-medium text-gray-700"><strong>Login :</strong> @Model.Login</p>
    </div>
    <div class="mb-4">
        <p class="font-medium text-gray-700"><strong>Password :</strong> @Model.Password</p>
    </div>
    <div class="mb-4">
        <p class="font-medium text-gray-700"><strong>Date de création :</strong> @Model.CreateAt</p>
    </div>
    <div class="mb-6">
        <p class="font-medium text-gray-700"><strong>Date de mise à jour :</strong> @Model.UpdateAt</p>
    </div>
    
    <!-- Lien pour retourner à la liste des utilisateurs -->
    <a href="@Url.Action("Index", "User")" class="inline-block px-6 py-2 bg-burgundy text-white font-semibold rounded-lg hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
        Retour à la liste
    </a>
</div>
