@model IEnumerable<GestionBoutiqueC.Entities.User>

@{
    ViewData["Title"] = "Liste des Utilisateurs";
}

<h1>@ViewData["Title"]</h1>

<div class="flex">
    <table class="min-w-full bg-white border border-gray-300 rounded-lg">
        <thead>
            <tr class="bg-burgundy">
                <th class="py-2 px-4 border-b text-white text-left">Login</th>
                <th class="py-2 px-4 border-b text-white text-left">Email</th>
                <th class="py-2 px-4 border-b text-white text-left">Actif</th>
                <th class="py-2 px-4 border-b text-white">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="bg-nude hover:bg-gray-100">
                    <td class="py-2 px-4 border-b">@user.Login</td>
                    <td class="py-2 px-4 border-b">@user.Email</td>
                    <td class="py-2 px-4 border-b">@user.Actif</td>
                    <td class="py-2 px-4 border-b text-center">
                        <!-- Actions -->
                        <a href="@Url.Action("Details", "User", new { id = user.Id })" class="text-red-500 hover:text-gray-700" title="Détails">
                            Détails
                        </a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="text-gray-500 hover:text-red-600" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                            Supprimer
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="py-2 px-4 text-center">Aucun utilisateur trouvé.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
