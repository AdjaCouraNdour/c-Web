            </div>
            <nav class="flex-grow">
                <ul>
                    <!-- Liens du menu -->
                    <li class="mb-6 mt-12">
                        <a href="Client/Index" class="text-white hover:text-white flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                            </svg>
                            Clients
                        </a>
                    </li>
                    <!-- Autres éléments du menu -->
                    <li class="mb-6">
                        <a href="" class="text-white hover:text-white flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm-.375 5.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                            </svg>
                            Articles
                        </a>
                    </li>
                    <!-- D'autres liens... -->
                </ul>
                @* <ul>
                    <li class="p-4 hover:bg-gray-700">
                        <a href="/" class="block text-white">Home</a>
                    </li>
                    <li class="p-4 hover:bg-gray-700">
                        <a href="/Home/Privacy" class="block text-white">Privacy</a>
                    </li>
                </ul> *@
            </nav>
        
        </aside>

        <!-- Main Content -->
        <div class="flex-1">
            <!-- Header -->
            <header class="bg-white border-b shadow p-4">
                <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
            </header>

            <!-- Main Content Area -->
            <main class="p-6">
                @RenderBody()
            </main>

            <!-- Footer -->
            @* <footer class="border-t p-4 text-center text-gray-500">
                &copy; 2024 - GestionBoutiqueWeb - <a href="/Home/Privacy" class="text-burgundy">Privacy</a>
            </footer> *@
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 
