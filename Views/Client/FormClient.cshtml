@using GestionBoutiqueC.Entities
@model Client

@{
    ViewData["Title"] = "Client Page";
}

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg">
    <div class="bg-gray-800 text-white text-lg font-bold p-4 rounded-t-lg">Création Client</div>
    <div class="p-6">

        <form asp-action="FormClient"  method="post">
            <div class="mb-4">
                <label for="Surnom" class="block text-burgundy text-sm font-bold mb-2" asp-for="Surnom">Surnom</label>
                <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="Surnom" id="" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Surnom"></span>
            </div>

            <div class="mb-4">
                <label for="Telephone" class="block text-burgundy text-sm font-bold mb-2" asp-for="Telephone">Téléphone</label>
                <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="Telephone" id="" />
                <span class="text-red-500 text-xs italic" asp-validation-for="Telephone"></span>
            </div>

            <div class="mb-4">
                <label for="Address" class="block text-burgundy text-sm font-bold mb-2" asp-for="Address">Adresse</label>
                <textarea type="text" id="Address" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring focus:border-blue-500" asp-for="Address"></textarea>
            </div>

            <div class="flex justify-end">
                <button class="bg-burgundy text-white font-bold py-2 px-4 rounded hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-400" type="submit">Soumettre</button>
            </div>
        </form>
    </div>
</div>
