@using GestionBoutiqueC.Core
@using GestionBoutiqueC.Entities
@model PaginationModel<Client>
@{
    ViewData["Title"] = "Liste des Clients";
}

<div class="container mx-auto mt-6">
    <table class="min-w-full bg-white mb-4 border border-gray-300 rounded-lg">
        <div class="flex justify-between items-center mb-4">
            <div class="text-lg font-bold">
                Liste des clients
            </div>
            <div>
                <a class="bg-burgundy text-white text-sm px-4 py-2 rounded-lg hover:bg-red-700" asp-action="FormClient">
                    + client
                </a>
            </div>
            @if (TempData["Message"] != null)
            {
                <div class="bg-burgundy border border-white text-white p-4 rounded-lg" role="alert">
                    <p class="mb-2">@TempData["Message"]</p>
                </div>
            }
        </div>

        <thead>
            <tr class="bg-burgundy text-white">
                <th class="py-2 px-4 border-b text-left">Nom Complet</th>
                <th class="py-2 px-4 border-b text-left">Téléphone</th>
                <th class="py-2 px-4 border-b text-left">Adresse</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model.Items)
            {
                <tr class="hover:bg-gray-100">
                    <td class="py-2 px-4 border-b">@client.Surnom</td>
                    <td class="py-2 px-4 border-b">@client.Telephone</td>
                    <td class="py-2 px-4 border-b">@client.Address</td>
                    <td class="py-2 px-4 border-b text-center">
                        <div class="flex justify-center items-center space-x-4">
                            <!-- Icône Détails -->
                            <a href="@Url.Action("DetailsClient", "Client", new { id = client.Id })" class="text-red-500 hover:text-gray-700">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                    <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 0 1 .67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 1 1-.671-1.34l.041-.022ZM12 9a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
                                </svg>
                            </a>

                            <!-- Icône Supprimer -->
                            <a href="@Url.Action("Delete", "Client", new { id = client.Id })" class="text-gray-500 hover:text-red-600" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                                    <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                                </svg>
                            </a>

                            <!-- Bouton Dettes -->
                            <a href="@Url.Action("DettesClient", "Dette", new { clientId  = client.Id })" class="bg-burgundy text-white text-sm px-4 rounded-lg hover:bg-red-700">
                                Dettes
                            </a>
                        </div>
                    </td>
                </tr>
            }
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="4" class="py-2 px-4 text-center text-gray-500">Aucun client trouvé.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="flex justify-end mt-4">
        <nav aria-label="Page navigation">
            <ul class="flex list-none space-x-2">
                @if (Model.HasPreviousPage)
                {
                    <li>
                        <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })"
                        class="px-4 py-2 border bg-burgundy text-white rounded-lg hover:bg-red-700">
                            &laquo; 
                        </a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li>
                        <a href="@Url.Action("Index", new { page = i })"
                        class="px-4 py-2 border rounded-lg 
                        @(i == Model.CurrentPage 
                            ? "bg-red-700 text-white border-red-700 hover:bg-red-800" 
                            : "bg-white text-burgundy border-burgundy hover:bg-gray-100")">
                            @i
                        </a>
                    </li>
                }
                @if (Model.HasNextPage)
                {
                    <li>
                        <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })"
                        class="px-4 py-2 border bg-burgundy text-white rounded-lg hover:bg-red-700">
                            &raquo;
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>

</div>
